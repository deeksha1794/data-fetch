{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "typeRoots": [
        "./types",
        "./node_modules"
    ],
    "types": [
      "webpack-env",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
